{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "src",
		"rootDir": "src",
		"outDir": "./dist",
		"declaration": false,
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true,
		"downlevelIteration": true,
		"strict": true,
		"target": "es5",
		"lib": [
			"es2015",
			"es2018",
			"dom"
		],
		"paths": {
			"@/*": [ "*" ]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
